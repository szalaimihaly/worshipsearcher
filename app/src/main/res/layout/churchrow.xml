<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ff3f8bba"
    android:minHeight="75dp">
    <TextView
        android:id="@+id/churchCity"
        android:text="Település"
        android:textSize="22dp"
        android:textColor="#ffbfbf25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/churchAddress"
        android:text="Cím"
        android:textSize="16dp"
        android:textColor="#ffbfbf25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/churchAddress"
        android:layout_alignParentRight="true"
        android:gravity="right"
        />
    <TextView
        android:id="@+id/churchComment"
        android:text="Megjegyzés"
        android:textSize="16dp"
        android:textColor="#ffbfbf25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/churchCity"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        />

    <TextView
        android:id="@+id/churchDistance"
        android:text="Távolság"
        android:textSize="16dp"
        android:textColor="#ffbfbf25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/churchAddress"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        />

</RelativeLayout>